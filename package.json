{
  "name": "jlg.io",
  "version": "0.0.0",
  "description": "web profile application",
  "author": "joshua@geschwendt.com",
  "license": "UNLICENSED",
  "repository": "git@github.com:jgeschwendt/jlg.io.git",
  "engines": {
    "node": "22.x"
  },
  "type": "module",
  "packageManager": "pnpm@10.11.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "esbuild",
      "sharp"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true
  },
  "dependencies": {
    "@fortawesome/free-brands-svg-icons": "6.7.2",
    "@fortawesome/free-solid-svg-icons": "6.7.2",
    "@vercel/analytics": "1.5.0",
    "@vercel/speed-insights": "1.2.0",
    "geist": "1.4.2",
    "http-status-codes": "2.3.0",
    "motion": "12.15.0",
    "next": "15.3.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "serialize-error": "12.0.0",
    "sharp": "0.34.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.28.0",
    "@next/eslint-plugin-next": "15.3.3",
    "@tailwindcss/postcss": "4.1.8",
    "@types/node": "22.15.29",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-unicorn": "59.0.1",
    "globals": "16.2.0",
    "postcss": "8.5.4",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.12",
    "tailwindcss": "4.1.8",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.1",
    "vercel": "42.3.0"
  },
  "scripts": {
    "build": "next build",
    "cspell": "pnpm dlx cspell **/*.{md,mjs,ts,tsx}",
    "dev": "next dev --turbopack",
    "favicon": "pnpm dlx svg-to-ico public/jg.svg src/app/favicon.ico",
    "lint": "next lint",
    "ncu": "pnpm dlx npm-check-updates -u && pnpm up && pnpm install",
    "start": "next start"
  }
}
